{
  "apps": [{
    "name": "node_app",
    "script": "bin/www",
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "production"
    },
    "watch": [
      "bin",
      "controllers",
      "routes",
      "app.js",
      "index.js"
    ],
    "ignore_watch": [
      "node_modules",
      "log",
      "public",
    ],
    "error_file" : "log/app-err.log",
    "out_file"   : "log/app-out.log"
  }]
}